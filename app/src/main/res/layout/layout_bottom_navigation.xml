<?xml version="1.0" encoding="utf-8"?>
<!-- Reusable Bottom Navigation Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:elevation="8dp">

    <!-- Trang chủ -->
    <LinearLayout
        android:id="@+id/navHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/navHomeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            app:tint="#666" />

        <TextView
            android:id="@+id/navHomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang chủ"
            android:textColor="#666"
            android:textSize="10sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Đặt lịch -->
    <LinearLayout
        android:id="@+id/navBooking"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/navBookingIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_calendar"
            app:tint="#666" />

        <TextView
            android:id="@+id/navBookingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt lịch"
            android:textColor="#666"
            android:textSize="10sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Thông báo -->
    <LinearLayout
        android:id="@+id/navNotification"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/navNotificationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notification"
            app:tint="#666" />

        <TextView
            android:id="@+id/navNotificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo"
            android:textColor="#666"
            android:textSize="10sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Tôi -->
    <LinearLayout
        android:id="@+id/navProfile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/navProfileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_user"
            app:tint="#666" />

        <TextView
            android:id="@+id/navProfileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôi"
            android:textColor="#666"
            android:textSize="10sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>

