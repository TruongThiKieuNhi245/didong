<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    card_view:cardUseCompatPadding="true"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:padding="12dp">

        <!-- Avatar circle with initial -->
        <TextView
            android:id="@+id/tv_avatar_initial"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/circle_gray"
            android:text="A"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"/>

        <!-- Name -->
        <TextView
            android:id="@+id/tv_msg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_avatar_initial"
            android:layout_toEndOf="@id/tv_avatar_initial"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:text="Nguyễn Văn A"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#111827"/>

        <!-- Time (right) -->
        <TextView
            android:id="@+id/tv_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Hôm qua"
            android:textSize="12sp"
            android:textColor="@color/muted"/>

        <!-- Preview -->
        <TextView
            android:id="@+id/tv_msg_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_msg_name"
            android:layout_toRightOf="@id/tv_avatar_initial"
            android:layout_toEndOf="@id/tv_avatar_initial"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:text="Chào bạn, tôi có thể xem phòng vào chiều nay không?"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:maxLines="1"
            android:ellipsize="end"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
