<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/roleSwitcherRoot"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:background="@drawable/button_primary"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="14dp"
    android:paddingEnd="12dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iconRole"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_user"
        app:tint="@color/white"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtRolePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người thuê"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtRoleSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyển vai trò"
            android:textColor="#E0E7FF"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iconArrow"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_dropdown"
        app:tint="@color/white"
        android:layout_marginStart="10dp" />

</LinearLayout>
