<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_yeucau"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <!-- Header gradient -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:background="@drawable/header_gradient"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="48dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        android:elevation="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yêu cầu"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý đặt lịch, tin nhắn và thanh toán"
            android:textSize="14sp"
            android:textColor="#E0E7FF"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_tabs_yeucau"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <Button
            android:id="@+id/btn_tab_datlich"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Đặt lịch"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/muted"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_tab_tinnhan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Tin nhắn"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/primary"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_tab_thanhtoan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Thanh toán"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/muted"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:id="@+id/tab_indicator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@+id/row_tabs_yeucau"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--Item-->
    <FrameLayout
        android:id="@+id/frame_yeucau_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tab_indicator"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bookings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clipToPadding="false"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_messages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:clipToPadding="false"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_payments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clipToPadding="false"/>
    </FrameLayout>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/layout_landlord_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
