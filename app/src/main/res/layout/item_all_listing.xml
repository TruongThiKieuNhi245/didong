<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:elevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_listing_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tiêu đề tin đăng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/btn_edit_listing"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_edit"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Price and Status Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_listing_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2.500.000 đ"
            android:textSize="14sp"
            android:textColor="#2196F3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_listing_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Còn trống"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="#E8F5E8"
            android:textColor="#4CAF50" />

    </LinearLayout>

    <!-- Active Switch Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hiển thị tin đăng"
            android:textSize="14sp"
            android:textColor="#666" />

        <Switch
            android:id="@+id/sw_listing_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>