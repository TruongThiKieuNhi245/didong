<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mau_trang"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_gradient"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng Ký"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/mau_trang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chủ Trọ / Người Cho Thuê"
                android:textSize="14sp"
                android:textColor="@color/mau_trang"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <!-- Họ và tên -->
        <EditText
            android:id="@+id/ho_ten_chu_tro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Họ và tên"
            android:inputType="text"
            android:padding="15dp"
            android:background="@drawable/edit_text_border"
            android:textColorHint="@color/mau_xam_dam"
            android:layout_marginBottom="15dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/email_chu_tro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:background="@drawable/edit_text_border"
            android:textColorHint="@color/mau_xam_dam"
            android:layout_marginBottom="15dp" />

        <!-- Số điện thoại -->
        <EditText
            android:id="@+id/sdt_chu_tro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:padding="15dp"
            android:background="@drawable/edit_text_border"
            android:textColorHint="@color/mau_xam_dam"
            android:layout_marginBottom="15dp" />

        <!-- Địa chỉ -->
        <EditText
            android:id="@+id/dia_chi_chu_tro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Địa chỉ hiện tại"
            android:inputType="textPostalAddress"
            android:padding="15dp"
            android:background="@drawable/edit_text_border"
            android:textColorHint="@color/mau_xam_dam"
            android:layout_marginBottom="15dp" />

        <!-- Mật khẩu -->
        <EditText
            android:id="@+id/mat_khau_dang_ky_chu_tro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Mật khẩu (ít nhất 6 ký tự)"
            android:inputType="textPassword"
            android:padding="15dp"
            android:background="@drawable/edit_text_border"
            android:textColorHint="@color/mau_xam_dam"
            android:layout_marginBottom="15dp" />

        <!-- Xác nhận mật khẩu -->
        <EditText
            android:id="@+id/xac_nhan_mat_khau_chu_tro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPassword"
            android:padding="15dp"
            android:background="@drawable/edit_text_border"
            android:textColorHint="@color/mau_xam_dam"
            android:layout_marginBottom="20dp" />

        <!-- Tiêu đề xác minh -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác Minh Danh Tính"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="15dp" />

        <!-- Loại giấy tờ -->
        <Spinner
            android:id="@+id/loai_giay_to"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_border"
            android:padding="15dp"
            android:layout_marginBottom="15dp" />

        <!-- Số giấy tờ -->
        <EditText
            android:id="@+id/so_giay_to"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Số CMND/CCCD/Hộ chiếu"
            android:inputType="text"
            android:padding="15dp"
            android:background="@drawable/edit_text_border"
            android:textColorHint="@color/mau_xam_dam"
            android:layout_marginBottom="15dp" />

        <!-- Nút tải lên ảnh giấy tờ -->
        <Button
            android:id="@+id/btn_tai_len_giay_to"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tải Lên Ảnh Giấy Tờ"
            android:textSize="14sp"
            android:textColor="@color/mau_trang"
            android:background="@drawable/button_border"
            android:layout_marginBottom="15dp" />

        <!-- Hiển thị ảnh đã tải lên -->
        <ImageView
            android:id="@+id/hinh_giay_to"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:background="@color/mau_xam"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />

        <!-- Checkbox Điều khoản -->
        <CheckBox
            android:id="@+id/dong_y_dieu_khoan_chu_tro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tôi đồng ý với Điều khoản dịch vụ"
            android:textSize="14sp"
            android:textColor="@color/mau_xam_dam"
            android:layout_marginBottom="20dp" />

        <!-- Nút Đăng Ký -->
        <Button
            android:id="@+id/btn_dang_ky_chu_tro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Đăng Ký"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/mau_trang"
            android:background="@drawable/button_gradient"
            android:layout_marginBottom="15dp" />

        <!-- Chuyển vai trò -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn là người thuê? "
                android:textSize="14sp"
                android:textColor="@color/mau_xam_dam" />

            <TextView
                android:id="@+id/chuyen_nguoi_thue_dang_ky_chu_tro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký tại đây"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/mau_xanh_chinh"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Đăng nhập -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản? "
                android:textSize="14sp"
                android:textColor="@color/mau_xam_dam" />

            <TextView
                android:id="@+id/dang_nhap_chu_tro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/mau_xanh_chinh"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>