<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="20dp">

    <!-- ==================== 1. Thanh kéo (Handle) của Bottom Sheet ==================== -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_sheet_handle" />

    <!-- ==================== 2. Tiêu đề + Nút Xóa bộ lọc ==================== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Bộ lọc nâng cao"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnClearFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Xoá bộ lọc"
            android:textColor="#7c3aed"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground" />

    </RelativeLayout>

    <!-- ==================== 3. Nội dung cuộn (ScrollView) ==================== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 3.1 Khoảng giá thuê -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá phòng (triệu/tháng)"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/priceRangeSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0.5"
                android:valueTo="10.0"
                app:values="@array/initial_range_slider_values"
                android:stepSize="0.5"
                app:thumbColor="#7c3aed"
                app:trackColorActive="#7c3aed"
                app:trackColorInactive="#E5E7EB"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/priceRangeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginBottom="20dp" />

            <!-- 3.2 Chọn khu vực / quận -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khu vực / Quận"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/areaSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_backgroud"
                android:padding="12dp"
                android:layout_marginBottom="20dp" />

            <!-- 3.3 Khoảng cách từ vị trí hiện tại -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khoảng cách / Gần bạn"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/distanceRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <RadioButton
                    android:id="@+id/distanceAny"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bất kỳ"
                    android:textSize="13sp"
                    android:buttonTint="#7c3aed"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/distance3km"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3km"
                    android:textSize="13sp"
                    android:buttonTint="#7c3aed" />

                <RadioButton
                    android:id="@+id/distance5km"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5km"
                    android:textSize="13sp"
                    android:buttonTint="#7c3aed" />

            </RadioGroup>

            <!-- 3.4 Loại phòng (Nguyên căn, Phòng riêng, Ở ghép) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại phòng"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/roomTypeChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:chipSpacing="8dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNguyenCan"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyên căn"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/gray_border"
                    app:chipStrokeWidth="1dp"
                    android:textColor="@color/chip_text_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPhongRieng"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng riêng"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/gray_border"
                    app:chipStrokeWidth="1dp"
                    android:textColor="@color/chip_text_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipOGhep"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ở ghép"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/gray_border"
                    app:chipStrokeWidth="1dp"
                    android:textColor="@color/chip_text_selector" />

            </com.google.android.material.chip.ChipGroup>

            <!-- 3.5 Tiện nghi (Máy lạnh, Wi-Fi, Giữ xe, WC riêng...) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiện nghi"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/amenitiesChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:chipSpacing="8dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAC"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máy lạnh"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/gray_border"
                    app:chipStrokeWidth="1dp"
                    android:textColor="@color/chip_text_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWifi"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wi-Fi"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/gray_border"
                    app:chipStrokeWidth="1dp"
                    android:textColor="@color/chip_text_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipParking"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giữ xe"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/gray_border"
                    app:chipStrokeWidth="1dp"
                    android:textColor="@color/chip_text_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPrivateBath"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WC riêng"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/gray_border"
                    app:chipStrokeWidth="1dp"
                    android:textColor="@color/chip_text_selector" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
    </ScrollView>

    <!-- ==================== 4. Nút hành động: Huỷ & Áp dụng ==================== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:background="@android:color/white">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Huỷ"
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            android:background="@drawable/button_outline"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:text="Áp dụng"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary" />

    </LinearLayout>

</LinearLayout>