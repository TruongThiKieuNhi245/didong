<?xml version="1.0" encoding="utf-8"?>
<!-- Reusable Bottom Navigation Layout for Landlord -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:elevation="8dp">

    <!-- Trang chủ -->
    <LinearLayout
        android:id="@+id/navHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/navHomeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            app:tint="#666" />

        <TextView
            android:id="@+id/navHomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang chủ"
            android:textColor="#666"
            android:textSize="10sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Yêu cầu -->
    <LinearLayout
        android:id="@+id/navRequests"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/navRequestsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_inbox"
            app:tint="#666" />

        <TextView
            android:id="@+id/navRequestsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yêu cầu"
            android:textColor="#666"
            android:textSize="10sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Thống kê -->
    <LinearLayout
        android:id="@+id/navStats"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/navStatsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bar_chart"
            app:tint="#666" />

        <TextView
            android:id="@+id/navStatsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thống kê"
            android:textColor="#666"
            android:textSize="10sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Tôi -->
    <LinearLayout
        android:id="@+id/navProfile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/navProfileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person"
            app:tint="#666" />

        <TextView
            android:id="@+id/navProfileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôi"
            android:textColor="#666"
            android:textSize="10sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>

